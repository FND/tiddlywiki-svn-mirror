#!/bin/bash
#  uploadbeta release

DEFAULT_RELEASE="2.4.0.B2"
RELEASE=${1:-$DEFAULT_RELEASE}

# upload files to temporary folder
echo
echo "uploading files"
echo
FILES="index.$RELEASE.html empty.$RELEASE.html"
scp $FILES tiddlywiki.com:./tmp/

# transfer files to their respective folders
echo
echo "transferring files"
echo
COMMANDS="ssh tiddlywiki.com"
COMMANDS="$COMMANDS sudo mv ./tmp/index.$RELEASE.html /var/www/www.tiddlywiki.com/htdocs/beta/index.html;"
COMMANDS="$COMMANDS sudo cp ./tmp/empty.$RELEASE.html /var/www/www.tiddlywiki.com/htdocs/beta/empty.html;"
COMMANDS="$COMMANDS sudo mv ./tmp/empty.$RELEASE.html /var/www/www.tiddlywiki.com/htdocs/upgrade/index.html;"
#COMMANDS="$COMMANDS sudo cp ./tmp/TiddlySaver.html /var/www/www.tiddlywiki.com/htdocs/beta/TiddlySaver.html;"
#COMMANDS="$COMMANDS sudo mv ./tmp/TiddlySaver.html /var/www/www.tiddlywiki.com/htdocs/upgrade/TiddlySaver.html;"
$COMMANDS

# complete
echo
echo "done"
echo
