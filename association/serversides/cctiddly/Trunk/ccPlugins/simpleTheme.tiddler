!StyleSheet
/***
General
***/
/*{{{*/
.tiddler .button {
	line-height:4;
	margin:5px;
	padding:8px;
}

body .chkOptionInput {
width:auto;
	float:right;
}

#contentWrapper .wizard .txtOptionInput {
	width:7em;
}

body{
	background: [[ColorPalette::SecondaryLight]];
	// background-image:url(http://friendster.bigoo.ws/content/layout/film-cartoon/film-cartoon_111.jpg);
	// background-image:url(http://g.editingmyspace.com/shay773/halloweenbackgrounds/BG1.gif);
}

#messageArea {
	background-color:[[ColorPalette::SecondaryMid]];
}

#messageArea .button{
	background:none;
}

#mainMenu br {
	display:none;
}

h1 {	
	color:[[ColorPalette::PrimaryMid]];
}


#contentWrapper{
	position:relative;
	margin: 2.5em auto;
	width:780px;
	line-height: 1.6em;
	border:1px solid [[ColorPalette::SecondaryLight]];
	font-size: 11px;
	font-family: Lucida Grande, Tahoma, Arial, Helvetica, sans-serif;
	height:1%;
	background-color:[[ColorPalette::SecondaryMid]];
}

.clearAll{
	clear:both;
}

.tagClear{
	clear:none;
}
/*}}}*/

/*{{{*/

.siteTitle {
	font-family: 'Trebuchet MS' sans-serif;
	font-weight: bold;
	position:relative;
	top:20px;
	left :20px;
	font-size: 32px;
	color:[[ColorPalette::PrimaryLight]];
}

.siteSubtitle {
	padding-top:15px;
