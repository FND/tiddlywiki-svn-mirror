if(!version.extensions.LoadTiddlers) {
  version.extensions.LoadTiddlers = {installed:true};

  function makeHeadingTiddler() {
    // var parent = document.getElementById("tiddlerDisplay");
    // var parent = document.getElementById(story.containerId());
    setTimeout(function() {
    var parent = document.getElementById("header");
    console.log(story, parent, story.container);
    var tiddler = story.createTiddler(parent, null, "---Intro", DEFAULT_VIEW_TEMPLATE);
    }, 5000);
  }

  function displayInitialTiddlers() {

    config.paramifiers.license = {
      onstart: function(license) {
        // TODO create apache_2_0 tiddler from thin air with policy links
        // OR just add the links to pagetemplate
        story.displayTiddlers(null,store.filterTiddlers("[tag["+license+"]]"),null,false, null);
        story.displayTiddler(null, license+"_text", DEFAULT_VIEW_TEMPLATE);
        story.displayTiddler(null, license+"_policy", DEFAULT_VIEW_TEMPLATE);
        console.log("new");
      }
    }

  }

  makeHeadingTiddler();
  displayInitialTiddlers();

};
